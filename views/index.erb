
</center>

<div class="panel panel-primary">
  <div class="panel panel-heading">
    <div class="row">
      <div class="col-md-6">
        <center><h2>Brands</h2></center>
      </div>
      <div class="col-md-6">
        <center><h2>Stores</h2></center>
      </div>
    </div>
  </div>
  <div class="panel panel-body">
    <div class="row">
      <div class="col-md-6">
        <form class="form-group" action="/brands" method="post">
          <input class="form-control" type="text" name="brand_name" placeholder="enter brand name here">
          <br>
          <button type="submit" class="btn btn-primary">Register New Brand</button>
        </form>
      </div>
      <div class="col-md-6">
        <form class="form-group" action="/stores" method="post">
          <input class="form-control" type="text" name="store_name" placeholder="enter store name here">
          <br>
          <button type="submit" class="btn btn-primary">Register New Store</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel panel-body">
    <div class="row">
      <div class="col-md-6">
        <% if @brands != []%>
          <% @brands.each do |brand| %>
            <div class="row">
              <div class="col-md-4">
                <h4><a href="/brands/<%=brand.id%>"><%= brand.name %></a><h4>
              </div>
              <div class="col-md-4">
                <a href="/brands/<%=brand.id%>/edit"><button type="button" class="btn btn-primary">Update Brand Name</button></a>
              </div>
              <div class="col-md-4">
                <form action="/brands/<%=brand.id%>" method="post">
                  <input type="hidden" name="_method" value="delete">
                  <button type="submit" class="btn btn-danger">Delete Brand</button>
                </form>
              </div>
            </div>
          <%end%>
        <%end%>
      </div>
      <div class="col-md-6">
        <% if @stores != []%>
          <% @stores.each do |store| %>
            <div class="row">
              <div class="col-md-4">
                <h4><a href="/stores/<%=store.id%>"><%= store.name %></a><h4>
              </div>
              <div class="col-md-4">
                <a href="/stores/<%=store.id%>/edit"><button type="button" class="btn btn-primary">Update Store Name</button></a>
              </div>
              <div class="col-md-4">
                <form action="/stores/<%=store.id%>" method="post">
                  <input type="hidden" name="_method" value="delete">
                  <button type="submit" class="btn btn-danger">Delete Store</button>
                </form>
              </div>
            </div>
          <%end%>
        <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
